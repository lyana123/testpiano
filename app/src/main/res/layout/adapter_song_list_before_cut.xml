<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/adapter_file_list_name"
            android:text="文件名" />

        <TextView
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/adapter_file_list_create_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大小" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/rename"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/rename"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin2"
            android:layout_marginBottom="@dimen/activity_vertical_margin2"/>

        <Button
            android:id="@+id/playmedia"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/play"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin2"
            android:layout_marginBottom="@dimen/activity_vertical_margin2"/>

        <Button
            android:id="@+id/cut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cut"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin2"
            android:layout_marginBottom="@dimen/activity_vertical_margin2"/>

    </LinearLayout>

</LinearLayout>